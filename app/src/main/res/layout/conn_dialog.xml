<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px320"
        android:layout_marginLeft="@dimen/px72"
        android:layout_marginRight="@dimen/px72"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px0"
            android:layout_weight="2">

            <TextView
                style="@style/wh_ww"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px3"
            android:background="@color/gray_text"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px0"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/px0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/diolog_cancel"
                    style="@style/wh_ww"
                    android:layout_centerInParent="true"
                    android:text="@string/diolog_cancel"
                    android:textSize="@dimen/px48" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/px3"
                android:layout_height="match_parent"
                android:background="@color/gray_text"></View>

            <RelativeLayout
                android:layout_width="@dimen/px0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dialog_confirm"
                    style="@style/wh_ww"
                    android:layout_centerInParent="true"
                    android:text="@string/dialog_confirm"
                    android:textColor="@color/main_text"
                    android:textSize="@dimen/px48" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>