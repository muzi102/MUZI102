        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/px129"-->
        <!--android:layout_marginTop="@dimen/px72"-->
        <!--android:max="100"-->
        <!--android:padding="1dp"-->
        <!--android:progress="0"-->
        <!--android:progressDrawable="@drawable/bg_forgotpassword_seekbar"-->
        <!--android:thumb="@drawable/seekbarthumb"-->
        <!--android:thumbOffset="-1dp" />-->
        <!--</RelativeLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reginster_relay5"
            android:layout_marginTop="@dimen/px48"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px48">

            <TextView
                style="@style/wh_ww"
                android:text="继续操作即视为同意" />

            <TextView
                android:id="@+id/reginster_tv_agreement"
                style="@style/wh_ww"

                android:text="muzi102服务协议"
                android:textColor="@color/main_theme" />

            <TextView
                style="@style/wh_ww"
                android:text="且" />

            <TextView
                style="@style/wh_ww"
                android:text="隐私保密协议"
                android:textColor="@color/main_theme" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
