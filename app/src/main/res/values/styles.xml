<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="interval_16">
        <item name="android:layout_height">@dimen/px16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_bg</item>
    </style>

    <style name="interval_2">
        <item name="android:layout_height">@dimen/px3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_bg</item>
    </style>

    <style name="login_account">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/px48</item>
        <item name="android:layout_marginLeft">@dimen/px48</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="login_account1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/px48</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="login_btn_login">
        <item name="android:layout_height">@dimen/px123</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/px48</item>
        <item name="android:layout_marginRight">@dimen/px48</item>
        <item name="android:layout_marginLeft">@dimen/px48</item>
    </style>
</resources>
