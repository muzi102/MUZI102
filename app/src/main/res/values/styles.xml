<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/main_theme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--通用++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <style name="wh_mm">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="wh_mw">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="wh_wm">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="wh_ww">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="title">
        <item name="android:layout_height">@dimen/px123</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="interval_16">
        <item name="android:layout_height">@dimen/px16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_bg</item>
    </style>

    <style name="interval_2">
        <item name="android:layout_height">@dimen/px3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_bg</item>
    </style>

    <style name="login_account">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/px0</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/px48</item>
        <item name="android:layout_marginLeft">@dimen/px48</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="login_account1">
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/px0</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/px48</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">@dimen/px16</item>
        <item name="android:minWidth">@dimen/px195</item>
    </style>

    <style name="login_pwd" parent="@style/login_account1">
        <item name="android:digits">@string/accountInfo_able_pwd</item>
    </style>

    <style name="login_btn_login">
        <item name="android:layout_height">@dimen/px123</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/px48</item>
        <item name="android:layout_marginRight">@dimen/px48</item>
        <item name="android:layout_marginLeft">@dimen/px48</item>
    </style>
    <!--通用-->
    <style name="convention_item">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/px145</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="v_SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px129</item>
        <item name="android:max">100</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/bg_forgotpassword_seekbar</item>
        <item name="android:thumb">@drawable/seekbart_humb</item>
        <item name="android:thumbOffset">@dimen/px0</item>
    </style>

    <style name="re_bg">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_bg_1</item>
    </style>
    <!--VerifyActivityActivity-->
    <style name="line">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

</resources>
